{% extends 'base.html.twig' %}

{% block title %}
	{{article.name}}
{% endblock %}

{% block body %}

	<div class="card-header">{{article.name}}</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-5">
				<img src="/assets/images/produits/{{article.image}}" alt="{{article.description}}" class=" d-block w-100">
			</div>
			<div class="col-md-4">
				<h4 class="card-title">{{article.subtitle}}</h4>
				{% if ( article.isBest ) %}
					<span class="badge rounded-pill bg-success">Meilleure vente</span>
				{% endif %}
				{{article.prix/100}}
				€
				<div>{{article.description}}</div>
				<div>Quantité disponible :
					{{article.quantite}}</div>
				<div>{{article.category}}
				</div>
			</div>
			<div class="row">
				<div class="col-md-4"></div>
				<a href="{{path ('ajouterPanier', {'id' : article.id})}}" class="btn btn-primary col-md-4 ">
					<i class="fas fa-cart-plus" style="color: white">
						Ajouter</i>
				</a>
				<div class="col-md-4"></div>
			</div>
		</div>

	{% endblock %}
