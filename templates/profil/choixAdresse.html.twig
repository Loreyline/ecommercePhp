{% extends 'base.html.twig' %}

{% block title %}Choix d'adresse
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col">
			{% set formhtml %}
			{{ form_start(form, {action : path('choix_transporteur')} )}}
			{{form_row(form.adressesLivraison,
				{
					'label_attr' : {'class' : 'fs-6'},
					'attr' : {'class' : 'alert alert-info'}
				})
				}}
			{{form_row(form.adressesFacturation,
				{
					'label_attr' : {'class' : 'fs-6'},
					'attr' : {'class' : 'alert alert-info'}
				})
				}}
			{{form_widget(form)}}
			{{ form_end(form) }}
			{% endset %}
			{{ formhtml|replace({'[br]' : '<br/>'})|raw }}
		</div>
	</div>
{% endblock %}
