{% extends 'base.html.twig' %}

{% block title %}Choix du transporteur
{% endblock %}

{% block body %}
	{# {{dump (adrL)}} #}
	<div class="row">
		<div class="col">
			{% set formhtml %}
			{% set params = { 'adrL' : adrL, 'adrF' : adrF } %}
			{{ form_start(form, {action : path('recap', params)}) }}
			{{form_row(form.transporteurs,
				{
					'label_attr' : {'class' : 'fs-6'},
					'attr' : {'class' : 'alert alert-info'}
				})
				}}
			{{form_widget(form)}}
			{{ form_end(form) }}
			{% endset %}
			{{ formhtml|replace({'[br]' : '<br/>'})|raw }}
		</div>
	</div>
{% endblock %}
